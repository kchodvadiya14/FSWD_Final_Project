# Backend Environment Variables
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# MongoDB Configuration
# Option 1: Local MongoDB
MONGODB_URI=mongodb://localhost:27017/nutrifit

# Option 2: MongoDB Atlas (Uncomment and add your connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nutrifit?retryWrites=true&w=majority

# JWT Secret (Change this to a secure random string in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
